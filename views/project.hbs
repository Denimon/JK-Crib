<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 text-center">
            <div class="project">
                <h4>{{project.Name}}</h4>
                <p>{{project.CreateDate}}</p>
                {{#if loggedIn}}
                    <a href="/editproject/{{project.Id}}"><img src="/pencil.png" class="edit-icon"/></a>
                {{/if}}

                {{#if project.ImageFileName}}
                    <img src="/projectimg/{{project.ImageFileName}}" width="100%" height="100%">
                {{else}}
                    <img src="/code.jpg" width="100%" height="100%">
                {{/if}}
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <pre>{{project.InformationText}}</pre>
            <a href="{{project.WebLink}}" target="_blank">click here to know more</a>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <div class="row">
        <div class="col-lg-12 text-center">
            <a class="btn btn-primary" href="/portfolio/">Back</a>
        </div>
    </div>
</div>