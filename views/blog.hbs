
<h4>Blog</h4>

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            {{#if blogPostObj.length}}
                {{#each blogPostObj}}
                    <div class="blog-post">
                        <h5 class="blog-title">{{Title}}</h5>
                        {{#if ../loggedIn}}
                            <a href="/editblogpost/{{Id}}"><img src="pencil.png" class="edit-icon"/></a>
                        {{/if}}
                        <p class="blog-date">{{CreateDate}}</p>
                        <p class="blog-author">By: {{Author}}</p>
                        <pre class="blog-text">{{BlogText}}</pre>

                        {{#if ImageFileName}}
                            <img src="./blogimg/{{ImageFileName}}" width="100%" height="100%">
                        {{/if}}
                        <div class="comment-link text-center">
                            <a href="/blogpost/{{Id}}/comments">Comments</a>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                    <p class="text-center">there are no blogposts</p>
            {{/if}}
        </div>
        <div class="col-lg-3"></div>
    </div>

    {{#if loggedIn}}
        <div class="row">
            <div class="col-lg-12 text-center">
                <a class="btn btn-primary" href="/createblogpost/">Create Blogpost</a>
            </div>
        </div>
    {{/if}}
</div>