

<h4>Create new project</h4>

{{#if validationErrors.length}}
	<p class="text-center">Errors:</p>
	<ul class="text-center">
		{{#each validationErrors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}

<div class="container">
    <form enctype="multipart/form-data" method="POST" action="">
        <div class="row">
            <div class="col-lg-6">

                {{#if validationErrors.length}}
                    <label for="name" class="labels" id="name-label">Project Name*</label>
                    <input class="name form-control" type="text" name="projectName" value="{{name}}"/>
                    <label for="description" class="labels">Short Description*</label>
                    <input class="description form-control" type="text" name="projectShortDescription" value="{{shortDescription}}"/>
                    <label for="link" class="labels">Link*</label>
                    <input class="link form-control" type="text" name="projectLink" value="{{link}}"/>
                {{else}}
                    <label for="name" class="labels" id="name-label">Project Name*</label>
                    <input class="name form-control" type="text" name="projectName"/>
                    <label for="description" class="labels">Short Description*</label>
                    <input class="description form-control" type="text" name="projectShortDescription"/>
                    <label for="link" class="labels">Link*</label>
                    <input class="link form-control" type="text" name="projectLink" value="http://"/>
                {{/if}}

                <input type="hidden" name="_csrf" value="{{token}}">
                <input type="file" name="projectImage"/>

            </div>
            <div class="col-lg-6">
                {{#if validationErrors.length}}
                    <textarea class="content textarea form-control" rows="12" cols="50" name="projectInformationText">{{informationText}}</textarea>
                {{else}}
                    <textarea class="content textarea form-control" rows="12" cols="50" name="projectInformationText"></textarea>
                {{/if}}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 text-center">
                <a class="back-btn btn btn-primary" href="/portfolio/">Back</a>
                <input class="btn btn-primary" type="submit" value="Create Project"/>
            </div>
        </div>
    </form>
</div>